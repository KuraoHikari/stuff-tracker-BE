generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ganti sesuai database yang digunakan
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String
  password   String
  items      Item[]
  locations  Location[]
  conditions Condition[]
  statuses   Status[]
  actions    Action[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Item {
  id          String        @id @default(cuid())
  name        String
  description String?
  category    Category?     @relation(fields: [categoryId], references: [id])
  categoryId  String?
  image       String? // URL untuk gambar item
  condition   Condition?    @relation(fields: [conditionId], references: [id])
  conditionId String?
  status      Status?       @relation(fields: [statusId], references: [id])
  statusId    String?
  location    Location?     @relation(fields: [locationId], references: [id])
  locationId  String?
  history     ItemHistory[]
  owner       User          @relation(fields: [ownerId], references: [id])
  ownerId     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Location {
  id        String   @id @default(cuid())
  name      String // Nama lokasi (contoh: Gudang, Rumah)
  address   String?
  latitude  Float? // Koordinat GPS
  longitude Float?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ItemHistory {
  id          String   @id @default(cuid())
  item        Item     @relation(fields: [itemId], references: [id])
  itemId      String
  action      Action   @relation(fields: [actionId], references: [id])
  actionId    String
  description String?
  date        DateTime @default(now())
}

model Condition {
  id        String   @id @default(cuid())
  name      String   @unique // Nama kondisi (contoh: Baru, Bekas)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Status {
  id        String   @id @default(cuid())
  name      String   @unique // Nama status (contoh: Tersedia, Dipinjam)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Action {
  id        String        @id @default(cuid())
  name      String        @unique // Nama aksi (contoh: Dipindahkan, Diperbarui)
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  histories ItemHistory[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
